    "groq",
    "mistral"
  ],
  "author": "AteebNoOne <ateebnoone@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/RealTeebot/npm-ai-hooks.git"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "eslint": "^9.37.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
