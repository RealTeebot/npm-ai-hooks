{
  "name": "npm-ai-hooks",
  "version": "1.0.2",
  "description": "Universal AI Hook Layer for Node.js â€“ one wrapper for all AI providers. Inject LLM-like behavior into any JavaScript or TypeScript function with a single line, without writing prompts, handling SDKs, or locking into any provider.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "Readme.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "ts-node src/index.ts",
    "clean": "rimraf dist",
